<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>


    <!-- 底部 -->
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#fafafa">
        <RadioButton
            android:id="@+id/radio0"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/button0"
            style="@style/radioStyle"
            android:textColor="@drawable/selector_tv_fen"
            android:drawableTop="@drawable/tebbar_mains_home"
            />

        <RadioButton
            android:id="@+id/radio1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/button1"
            style="@style/radioStyle"
            android:textColor="@drawable/selector_tv_fen"
            android:drawableTop="@drawable/tebbar_mains_classify"/>

        <RadioButton
            android:id="@+id/radio2"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/button2"
            style="@style/radioStyle"
            android:textColor="@drawable/selector_tv_fen"
            android:drawableTop="@drawable/tebbar_mains_find"/>

        <RadioButton
            android:id="@+id/radio3"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/button3"
            style="@style/radioStyle"
            android:textColor="@drawable/selector_tv_fen"
            android:drawableTop="@drawable/tebbar_mains_me"/>


    </RadioGroup>

</LinearLayout>